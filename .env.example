# .env.example
# CryptoScalper AI - Variables d'environnement
# 
# INSTRUCTIONS:
# 1. Copier ce fichier : cp .env.example .env
# 2. Remplir les valeurs dans .env
# 3. NE JAMAIS commit le fichier .env !

# ============================================
# BINANCE API
# ============================================

# Clés API Binance (récupérer sur https://www.binance.com/fr/my/settings/api-management)
# Pour le testnet : https://testnet.binance.vision/
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Mode testnet (True = paper trading, False = argent réel)
# TOUJOURS commencer avec True !
BINANCE_TESTNET=True

# ============================================
# TRADING PARAMETERS
# ============================================

# Capital initial en USDT
INITIAL_CAPITAL=30.0

# Risque maximum par trade (0.02 = 2%)
MAX_RISK_PER_TRADE=0.02

# Exposition totale maximum (0.10 = 10%)
MAX_TOTAL_EXPOSURE=0.10

# Nombre maximum de trades simultanés
MAX_CONCURRENT_TRADES=1

# ============================================
# SCANNER PARAMETERS
# ============================================

# Volume minimum 24h en USDT pour considérer une paire
MIN_VOLUME_24H_USDT=1000000

# Spread maximum acceptable (0.001 = 0.1%)
MAX_SPREAD_PERCENT=0.001

# Intervalle de scan en secondes
SCAN_INTERVAL_SECONDS=5

# ============================================
# ML MODEL PARAMETERS
# ============================================

# Seuil de probabilité pour déclencher un trade (0.65 = 65%)
PREDICTION_THRESHOLD=0.65

# Objectif de profit (0.003 = 0.3%)
TARGET_PROFIT_PERCENT=0.003

# Stop-loss (0.005 = 0.5%)
STOP_LOSS_PERCENT=0.005

# ============================================
# LOGGING
# ============================================

# Niveau de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Chemin du fichier de log
LOG_FILE_PATH=logs/cryptoscalper.log